<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">
  <changeSet id="012-create-user-registration-token-table" author="growpath">
    <createTable tableName="user_registration_token">
      <column name="id" type="BIGSERIAL">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="user_id" type="BIGINT">
        <constraints nullable="false" references="users(id)" foreignKeyName="fk_registration_token_user"/>
      </column>
      <column name="token" type="VARCHAR(255)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="expires_at" type="TIMESTAMP WITH TIME ZONE">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createIndex indexName="idx_registration_token_token" tableName="user_registration_token">
      <column name="token"/>
    </createIndex>
    <createIndex indexName="idx_registration_token_user_id" tableName="user_registration_token">
      <column name="user_id"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
