<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">
  <changeSet id="010-create-internship-programs-table" author="growpath">
    <createTable tableName="internship_programs">
      <column name="id" type="BIGSERIAL">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="title" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="description" type="TEXT">
        <constraints nullable="true"/>
      </column>
      <column name="start_date" type="DATE">
        <constraints nullable="false"/>
      </column>
      <column name="duration" type="INTEGER">
        <constraints nullable="false"/>
      </column>
      <column name="max_places" type="INTEGER">
        <constraints nullable="false"/>
      </column>
      <column name="requirements" type="TEXT">
        <constraints nullable="true"/>
      </column>
      <column name="goals" type="TEXT">
        <constraints nullable="true"/>
      </column>
      <column name="competencies" type="TEXT">
        <constraints nullable="true"/>
      </column>
      <column name="selection_stages" type="TEXT">
        <constraints nullable="true"/>
      </column>
      <column name="status" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="created_by" type="BIGINT">
        <constraints nullable="true"/>
      </column>
      <column name="created_at" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="updated_at" type="TIMESTAMP">
        <constraints nullable="true"/>
      </column>
      <column name="internships" type="TEXT">
        <constraints nullable="true"/>
      </column>
    </createTable>
    <createIndex indexName="idx_internship_programs_status" tableName="internship_programs">
      <column name="status"/>
    </createIndex>
    <createIndex indexName="idx_internship_programs_created_by" tableName="internship_programs">
      <column name="created_by"/>
    </createIndex>
    <createIndex indexName="idx_internship_programs_start_date" tableName="internship_programs">
      <column name="start_date"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
