  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "startDate": {
      "type": "string",
      "format": "date"
    },
    "duration": {
      "type": "integer"
    },
    "maxPlaces": {
      "type": "integer"
    },
    "requirements": {
      "type": "array",
